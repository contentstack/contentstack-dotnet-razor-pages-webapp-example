@page
@model DetailsModel
@{
}

    <div class="products">
        <div class="container">
            <div class="single-page">
                <div class="single-page-row" id="detail-21">
                    <div class="col-md-6 single-top-left vcenter">
                        <div class="thumb-image detail_images flexslider">
                            <ul class="slides">
                                @foreach (Contentstack.Core.Models.Asset asset in Model.Product.FeaturedImage) {
                                    <li data-thumb="@asset.Url">
                                        <img class="slides-image" src="@asset.Url" />
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-6 single-top-right vcenter">
                        <h3 class="item_name">@Model.Product.Title</h3>
                        <p>@Model.Product.Description</p>
                        <div class="actual-price">﹩@Model.Product.Price</div>

                    </div>
                </div>
            </div>
        </div>
    </div>